<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <RootNamespace>KC.WPF_Kanban</RootNamespace>
    <TargetFrameworks>net48;net5.0-windows</TargetFrameworks>
    <ProjectTypeGuids>{60dc8134-eba5-43b8-bcc9-bb4bc16c2548};{FAE04EC0-301F-11D3-BF4B-00C04F79EFBC}</ProjectTypeGuids>
    <PackageIcon>Logo.png</PackageIcon>
    <AssemblyTitle>WPF-Kanban</AssemblyTitle>
    <Company>KhaosCoders</Company>
    <Product>WPF-Kanban</Product>
    <Description>A simple task board WPF control</Description>
    <Copyright>Copyright 2021</Copyright>
    <Version>2.0.0</Version>
    <AssemblyVersion>2.0.0.0</AssemblyVersion>
    <FileVersion>2.0.0.0</FileVersion>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <UseWPF>true</UseWPF>
    <LangVersion>latest</LangVersion>
    <Authors>Khaos-Coders</Authors>
    <PackageProjectUrl>https://github.com/KhaosCoders/wpf-kanban</PackageProjectUrl>
    <PackageReleaseNotes>.NET 5 Support
Fixed column headers</PackageReleaseNotes>
    <PackageTags>WPF Kanban Card Task Board Control</PackageTags>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>
  <PropertyGroup>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyOriginatorKeyFile>WpfKanban.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <Target Name="PostPackNugetDeploy" AfterTargets="Pack" Condition="'$(Configuration)' == 'Release'">
    <Exec Command="=&quot;%userprofile%\.nuget\nuget.exe push &quot;$(OutputPath)$(PackageId).$(PackageVersion).nupkg&quot; -Source &quot;$(NuGetSourceRelease)&quot; -Verbosity Detailed" />
  </Target>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
  <ItemGroup>
    <None Include="WpfKanban.snk" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Res\Logo.png" Pack="true" PackagePath="\" />
    <Resource Include="Res\ok.png" />
  </ItemGroup>
</Project>